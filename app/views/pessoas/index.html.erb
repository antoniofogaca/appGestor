<p id="notice"><%= notice %></p>

<h1>Listagem de Pessoas</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.status %></td>
        <td><%= link_to 'Exibir', pessoa,  class: 'btn btn-success' %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Deletar', pessoa, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Registro', new_pessoa_path, class: 'btn btn-primary' %>
